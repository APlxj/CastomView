<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wind.simonlikeview.MainActivity">

    <com.wind.simonlikeview.MyValueAnimView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaa" />

    <LinearLayout
        android:id="@+id/backGround"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sb_smile"
        android:layout_centerHorizontal="true"
        android:background="@drawable/yellow_background"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_smile_face"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/like_1" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_smile"
        style="@android:style/Widget.Holo.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone" />

    <com.wind.simonlikeview.SimonLikeView
        android:id="@+id/simon_like_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

</RelativeLayout>
